<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bg_with_circle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ecell_white"
            />

        <TextView
            android:id="@+id/sign_in_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_bold"
            android:text="@string/sign_in"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorWhite"
            android:textSize="40dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/sign_in_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/raleway_bold"
            android:text="@string/sign_in_with_username"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/sign_in_txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:fontFamily="@font/raleway_bold"
            android:text="@string/sign_in_password"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/layout_background">

            <EditText
                android:id="@+id/inputusername"
                android:layout_width="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:layout_height="49dp"
                android:layout_marginStart="5dp"
                android:hint="@string/username"
                android:paddingTop="10dp"
                />


            <EditText
                android:id="@+id/inputpassword"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginStart="5dp"
                android:paddingTop="10dp"
                android:hint="@string/password"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_style_filled"
            android:layout_gravity="center">

            <Button
                android:id="@+id/signinbutton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="@string/sign_in"
                android:background="@color/colorWhite"
                android:fontFamily="@font/raleway_bold"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/colorOuterSpace"
                android:clickable="true"
                android:focusable="true"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/forgetpassword"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:text="@string/forgot_password"
            android:textColor="@color/colorSonicSilver"
            android:textSize="16dp"
            android:paddingLeft="50dp"
            android:paddingTop="2dp"
            android:onClick="forgot_password"
            android:clickable="true"
            android:layout_gravity="center"/>




    </LinearLayout>

    <ProgressBar
        android:id="@+id/signinprogressbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/AlertDialog.AppCompat"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp"
        android:visibility="gone"/>


</RelativeLayout>

