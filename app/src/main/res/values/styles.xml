<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="parentButtonStyle">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="signUpLayoutButtonStyle" parent="parentButtonStyle">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="lineStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:background">@drawable/solid_line_lav_gray</item>
    </style>

    <style name="topTextStyle">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ProgressDialog">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="centralLayoutStyle">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@drawable/layout_background</item>
    </style>

    <style name="textInputLayoutStyle">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:textColorHint">@color/colorOuterSpace</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="editTextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="regDivideLine">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/solid_line_gray</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="SlidingDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_left</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

</resources>
