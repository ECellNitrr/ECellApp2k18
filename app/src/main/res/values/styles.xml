<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="parent_button_style">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="sign_up_lay_button_style" parent="parent_button_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="line_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:background">@drawable/solid_line_lav_gray</item>
    </style>

    <style name="top_text_style">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="central_layout_style">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@drawable/layout_background</item>
    </style>

    <style name="textInputLayout_style">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:textColorHint">@color/colorOuterSpace</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="editText_style">
        <item name="android:maxLines">1</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="reg_divide_line">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/solid_line_gray</item>
    </style>
</resources>
