<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:background="#eeeeee"
        android:elevation="35dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="Sign Up"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/icon_user" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="1dp" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/register_input_name_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/register_input_name"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:hint="Name" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/icon_email" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="1dp" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/register_input_email_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/register_input_email"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:hint="Email" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/icon_phone" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="1dp" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/register_input_phone_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/register_input_phone"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:hint="Phone Number"
                            android:transitionName="editTextTransition" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/icon_password" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="1dp" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/register_input_password_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/register_input_password"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:hint="Password" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/register_bot_card_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:transitionName="cardViewTransition"
        app:cardBackgroundColor="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/register_manual_proceed"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="50dp"
                android:background="@drawable/button_style"
                android:text="PROCEED"
                android:transitionName="buttonTransition" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
