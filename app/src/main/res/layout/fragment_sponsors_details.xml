<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    tools:context=".sponsor.Fragments.SponsorsDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/itemlayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sponsdetailname"
            android:textColor="@color/colorWhite"
            android:textSize="25dp"
            android:layout_height="40dp"
            android:text="testing"
            android:textAlignment="center"
            android:layout_width="match_parent"
             />
        <ImageView
            android:id="@+id/sponsdetailpic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/sponsdetaildetails"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:layout_height="40dp"
            android:text="testing"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/sponsdetailcontact"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:layout_height="40dp"
            android:text="testing"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/sponsdetailwebsite"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:layout_height="40dp"
            android:text="testing"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>

