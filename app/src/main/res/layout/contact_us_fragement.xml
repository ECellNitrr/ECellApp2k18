<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorHomeBottomBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_us_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="OUR DETAILS"
            android:textColor="@color/colorGreenLight"
            android:textSize="60sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="55dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="15dp"
                android:lines="2"
                android:maxLines="2"
                android:text="@string/address"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/close_envelope" />


            <TextView
                android:id="@+id/email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/committe_email"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/phone" />


            <TextView
                android:id="@+id/phone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:lines="1"
                android:maxLines="1"
                android:text="@string/contact_no"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/contact_us_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/get_in_touch"
            android:textColor="@color/colorGreenLight"
            android:textSize="60sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/user" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/contact_us_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="25dp"
                android:textColorHint="@color/colorOuterSpace">

                <EditText
                    android:id="@+id/contactNameEdit"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:fontFamily="@font/raleway_bold"
                    android:hint="@string/name"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:maxEms="20"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/close_envelope" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/contactEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="25dp"
                android:textColorHint="@color/colorOuterSpace">

                <EditText
                    android:id="@+id/contactEmailEdit"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:fontFamily="@font/raleway_bold"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxEms="20"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/chat_comment_oval_speech_bubble_with_text_lines" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/contactMessage"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="25dp"
                android:textColorHint="@color/colorOuterSpace">

                <EditText
                    android:id="@+id/contactMessageEdit"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:fontFamily="@font/raleway_bold"
                    android:hint="@string/msg"
                    android:imeOptions="actionDone"
                    android:inputType="textImeMultiLine"
                    android:lines="7"
                    android:maxEms="20"
                    android:maxLines="7"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:background="@color/colorLightBlack"
            android:padding="10dp"
            android:src="@drawable/sent_mail" />
    </LinearLayout>
</ScrollView>